{
  "name": "book-review-platform",
  "version": "1.0.0",
  "description": "A MERN stack book review platform with authentication and CRUD operations",
  "main": "api/index.js",
  "type": "module",
  "scripts": {
    "start": "cd frontend && npm start",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "cd backend && npm run dev",
    "client": "cd frontend && npm start",
    "install-all": "npm install && cd backend && npm install && cd ../frontend && npm install"
  },
  "keywords": ["mern", "book-review", "mongodb", "react", "express"],
  "author": "Your Name",
  "license": "MIT",
  "dependencies": {
    "mongoose": "^8.0.3",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": "22.x",
    "npm": ">=8.0.0"
  }
}
